@model MyProfileViewModel
@{
    ViewData["Title"] = "Profilim";
}

<div class="profile-section">
    <div class="container">
        <!-- Profil Başlığı -->
        <div class="profile-header">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <div class="profile-image-container">
                        <img src="/images/default-avatar.png" alt="@Model.UserName" class="profile-image">
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="profile-info">
                        <h1 class="profile-username">@Model.UserName</h1>
                        <p>@Model.Name @Model.Surname</p>
                        <p>@Model.Email</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ana İçerik -->
        <div class="profile-content mt-5">
            <ul class="nav nav-tabs" id="profileTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="reviews-tab" data-bs-toggle="tab" href="#reviews">
                        <i class="fas fa-pen-alt me-2"></i>Yorumlarım
                    </a>
                </li>
            </ul>

            <div class="tab-content" id="profileTabContent">
                <!-- Yorumlar -->
                <div class="tab-pane fade show active" id="reviews">
                    @if (Model.Reviews.Any())
                    {
                        foreach (var review in Model.Reviews)
                        {
                            <div class="review-card">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p class="review-text">@review.Content</p>
                                        <div class="review-meta">
                                            <span class="date">@review.Created.ToString("dd.MM.yyyy HH:mm")</span>
                                            <span class="likes">
                                                <i class="fas fa-thumbs-up"></i> @review.LikeCount
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-pen-alt"></i>
                            <p>Henüz bir yorum yazmadınız.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>