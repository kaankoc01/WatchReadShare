@model MovieDetailViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="movie-detail-section">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="movie-header">
                    <h1 class="movie-title">@Model.Title</h1>
                    <div class="movie-meta">
                        <span class="year">@Model.Year</span>
                        <span class="duration">@Model.Duration dk</span>
                        <span class="rating">
                            @for (int i = 0; i < 5; i++)
                            {
                                <i class="@(i < Model.Rating ? "fas" : "far") fa-star"></i>
                            }
                        </span>
                    </div>
                </div>

                <div class="movie-content mt-4">
                    <img src="@Model.ImageUrl" class="movie-poster mb-4" alt="@Model.Title">
                    <p class="movie-description">@Model.Description</p>
                </div>

                <!-- Yorum Bölümü -->
                <div class="comments-section mt-5">
                    <h3>Yorumlar (@Model.Comments.Count)</h3>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <partial name="_AddComment" model="Model" />
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Yorum yapabilmek için lütfen <a href="/login" class="alert-link">giriş yapın</a>.
                        </div>
                    }

                    <div class="comments-list">
                        @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedDate))
                        {
                            <div class="comment-item">
                                <div class="comment-header d-flex justify-content-between">
                                    <div class="user-info">
                                        <img src="@comment.UserAvatar" class="avatar" alt="@comment.UserName">
                                        <span class="username">@comment.UserName</span>
                                    </div>
                                    <div class="comment-meta">
                                        <div class="rating">
                                            @for (int i = 0; i < 5; i++)
                                            {
                                                <i class="@(i < comment.Rating ? "fas" : "far") fa-star"></i>
                                            }
                                        </div>
                                        <span class="date">@comment.CreatedDate.ToString("dd.MM.yyyy")</span>
                                    </div>
                                </div>
                                <div class="comment-content">
                                    <p>@comment.Text</p>
                                </div>
                                <div class="comment-actions">
                                    <button class="btn btn-sm btn-like @(comment.IsLiked ? "active" : "")" 
                                        data-comment-id="@comment.Id">
                                        <i class="far fa-thumbs-up"></i>
                                        <span class="like-count">@comment.LikeCount</span>
                                    </button>
                                    @if (User.Identity.Name == comment.UserName)
                                    {
                                        <button class="btn btn-sm btn-delete" data-comment-id="@comment.Id">
                                            <i class="far fa-trash-alt"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="movie-sidebar">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Film Bilgileri</h5>
                            <ul class="movie-info-list">
                                <li><strong>Yönetmen:</strong> @Model.Director</li>
                                <li><strong>Oyuncular:</strong> @Model.Cast</li>
                                <li><strong>Tür:</strong> @Model.Genres</li>
                                <li><strong>Vizyon Tarihi:</strong> @Model.ReleaseDate.ToString("dd.MM.yyyy")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@section Scripts {
    <script src="~/js/comment.js"></script>
} 