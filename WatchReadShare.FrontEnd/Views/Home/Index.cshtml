@model List<WatchReadShare.FrontEnd.Models.MovieCardViewModel>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="featured-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="section-title">Filmler</h2>
                <div class="row">
                    @foreach (var movie in Model)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="movie-card">
                                <a href="@Url.Action("Detail", "Movie", new { id = movie.Id })">
                                    <img src="@(movie.ImageUrl ?? "/images/default-movie.jpg")" class="card-img-top" alt="@movie.Name">
                                    <div class="card-body">
                                        <h5 class="card-title">@movie.Name</h5>
                                        <p class="card-text">@movie.Description</p>
                                        <div class="movie-meta">
                                            @if (movie.Year.HasValue)
                                            {
                                                <span class="year">@movie.Year</span>
                                            }
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
