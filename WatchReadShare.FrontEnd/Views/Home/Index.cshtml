@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="featured-section">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1 class="display-4 mb-4">En Son İncelemeler</h1>
                <div class="featured-review">
                    <div class="card bg-dark text-white">
                        <img src="~/images/featured-movie.jpg" class="card-img" alt="Featured Movie">
                        <div class="card-img-overlay d-flex flex-column justify-content-end">
                            <h2 class="card-title">Oppenheimer (2023)</h2>
                            <p class="card-text">Christopher Nolan'ın son filmi, atom bombasının yaratıcısının hikayesini anlatıyor...</p>
                            <div class="rating">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <h3 class="mb-4">Popüler İncelemeler</h3>
                <div class="popular-reviews">
                    @for (int i = 0; i < 3; i++)
                    {
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-4">
                                    <img src="~/images/movie-thumb.jpg" class="img-fluid rounded-start" alt="Movie">
                                </div>
                                <div class="col-8">
                                    <div class="card-body">
                                        <h5 class="card-title">Film Adı</h5>
                                        <div class="rating small">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <section class="latest-reviews">
                <h2 class="section-title">Son Eklenen İncelemeler</h2>
                <div class="row">
                    @for (int i = 0; i < 6; i++)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card movie-card">
                                <img src="~/images/movie-thumb.jpg" class="card-img-top" alt="Movie">
                                <div class="card-body">
                                    <h5 class="card-title">Film Adı</h5>
                                    <p class="card-text">Kısa film özeti ve inceleme başlangıcı...</p>
                                    <div class="rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <small class="text-muted">Yazar: John Doe</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
        <div class="col-md-4">
            <div class="sidebar">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">En Çok Okunanlar</h5>
                        <ul class="list-unstyled">
                            @for (int i = 0; i < 5; i++)
                            {
                                <li class="mb-2">
                                    <a href="#" class="text-decoration-none">
                                        <div class="d-flex align-items-center">
                                            <span class="number me-2">@(i + 1)</span>
                                            <div>
                                                <h6 class="mb-0">Film Adı @(i + 1)</h6>
                                                <small class="text-muted">1.2K okuma</small>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
